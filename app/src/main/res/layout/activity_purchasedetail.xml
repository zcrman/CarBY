<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_purchasededail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/titlebar_buy" />

    <com.android.lehuitong.view.VerticalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_purchasededail"
        android:layout_above="@+id/btn_buy"
        android:background="#f2f2f2"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/item_fragment_shop_list_lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp" 
                >

                <android.support.v4.view.ViewPager
                    android:id="@+id/item_fragment_shop_list_imageview1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" 
                    />
                <ImageView
                    android:id="@+id/haitaopin_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/haitao" />

               <!--   <Button
                    android:id="@+id/add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:background="@drawable/shape_parchase_add_cart_button"
                    android:text="已加入购物车"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="invisible" />  -->

                <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/item_fragment_shop_list_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="商品1"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/item_fragment_shop_list_imageview2"
                    android:text="￥"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_fragment_shop_list_textview1"
                    android:layout_marginLeft="16dp"
                             android:textColor="#FB7133"
                    android:layout_alignBottom="@+id/item_fragment_shop_list_textview3"
                    android:layout_alignTop="@+id/item_fragment_shop_list_textview3"
                  />

                <TextView
                    android:id="@+id/item_fragment_shop_list_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_fragment_shop_list_textview1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/item_fragment_shop_list_imageview2"
                    android:text="26.8"
                    android:textColor="#FB7133"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_fragment_shop_list_textview1"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/item_fragment_shop_list_textview3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_fragment_shop_list_textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="￥ 00"
                        android:textColor="#C7C7C7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_fragment_shop_list_textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_fragment_shop_list_textview1"
                    android:layout_toLeftOf="@+id/item_fragment_shop_list_textview5"
                    android:text="已售"
                    android:textColor="#C7C7C7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_fragment_shop_list_textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/item_fragment_shop_list_textview1"
                    android:layout_marginRight="16dp"
                    android:text="00"
                    android:textColor="#C7C7C7"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/promote_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical" 
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:background="#ffffff"
                    android:layout_marginLeft="8dp"
                     >

                    <ImageView
                        android:id="@+id/yuliushijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/icon_time" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="促销时间"
                        android:layout_toRightOf="@id/yuliushijian"
                        android:textColor="#BFBFBF"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="#EFEFEF" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="5月25日"
                        android:textSize="14sp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:text="周五"
                        android:layout_toRightOf="@id/start_time"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/daojishi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:text="倒计时："
                        android:layout_below="@id/start_time"
                        android:paddingBottom="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/countdownTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:layout_below="@id/start_time"
                        android:layout_toRightOf="@id/daojishi"
                        android:paddingBottom="10dp"
                        android:textColor="#FB7133" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_marginLeft="8dp"
                     >

                    <ImageView
                        android:id="@+id/purchase_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_detail_store" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="商家信息"
                        android:layout_toRightOf="@id/purchase_info"
                        android:textColor="#BFBFBF"
                        android:layout_centerVertical="true"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:text="第一品牌店"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/shop_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="16dp"
                            android:text="028-61154876" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="5dp"
                            android:text="水星路208号"
                            android:textSize="14sp" />
                    </LinearLayout>
<View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="5dp"
                    android:background="#EFEFEF" />
                    <LinearLayout
                        android:id="@+id/xinyu_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp" >

                            <ImageView
                                android:id="@+id/product_details_authentic_guaranteed_icon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="5dp"
                                android:background="@drawable/product_details_authentic_guaranteed_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/product_details_authentic_guaranteed_icon1"
                                android:text="正品保证"
                               android:paddingBottom="5dp"
                                android:layout_centerVertical="true"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            
                            android:layout_marginRight="8dp" >

                            <ImageView
                                android:id="@+id/product_details_authentic_guaranteed_icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="5dp"
                                android:background="@drawable/product_details_authentic_guaranteed_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/product_details_authentic_guaranteed_icon2"
                                android:text="国际直邮"
                                android:layout_centerVertical="true"
                                android:paddingBottom="5dp"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            
                            android:layout_marginRight="16dp" >

                            <ImageView
                                android:id="@+id/product_details_authentic_guaranteed_icon3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="5dp"
                                android:background="@drawable/product_details_authentic_guaranteed_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/product_details_authentic_guaranteed_icon3"
                                android:text="快速清关"
                                android:paddingBottom="5dp"
                                android:layout_centerVertical="true"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 3 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/goods_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <!--  <TextView
                        android:id="@+id/goods_intro"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="" />-->
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff0000"
                            android:layout_marginLeft="10dp"
                           	android:paddingBottom="10dp"
                           	android:paddingTop="10dp"
                            android:text="查看图文详情"
                            android:textSize="17sp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/jiantou" />

                </RelativeLayout>
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#efefef"/>
            </LinearLayout>
            <!-- 3 -->

        </LinearLayout>
    </com.android.lehuitong.view.VerticalScrollView>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/shape_buydetail"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="visible" />

</RelativeLayout>