<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ktv_package_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ktv_package_bg" >

        <LinearLayout
            android:id="@+id/ktv_package_layout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ktv_package_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ktv_package_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="套餐一"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ktv_package_circle"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/package_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 199"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/customer_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/one_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1份"
                    android:textColor="@color/text_color_heavy_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/one_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="精品小吃"
                    android:textColor="@color/text_color_light_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12瓶"
                    android:textColor="@color/text_color_heavy_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/goods_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="雪花啤酒"
                    android:singleLine="false"
                    android:maxEms="8"
                    android:textColor="@color/text_color_heavy_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1份"
                    android:textColor="@color/text_color_heavy_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="五彩果盘"
                    android:textColor="@color/text_color_light_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ktv_package_selected_layout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ktv_package_layout"
            android:layout_alignParentTop="true"
            android:alpha="0.78"
            android:visibility="gone"
            android:background="@drawable/ktv_package_selected_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ktv_choose_icon" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>