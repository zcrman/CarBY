<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:id="@+id/user_image_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dip"
        android:background="#FFFFFF"
        android:gravity="center" >

        <ImageView
            android:id="@+id/back_head_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="16dip"
            android:src="@drawable/ktv_switch_icon" />

        <!--
             <ImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/back_head_image"
            android:background="@drawable/dot"
            android:src="@drawable/personal_data_head_sculpture" />
        -->

        <com.android.lehuitong.view.CircularImage
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/back_head_image"
            android:background="@drawable/personal_data_head_sculpture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:text="头像"
            android:textColor="#666666"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/user_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dip"
        android:background="#FFFFFF"
        android:gravity="center" >

        <ImageView
            android:id="@+id/back_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="16dip"
            android:src="@drawable/ktv_switch_icon" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/back_name"
            android:text="乐汇友友"
            android:textColor="#9F9F9F"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:text="昵称"
            android:textColor="#666666"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/user_sex_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dip"
        android:background="#FFFFFF"
        android:gravity="center" >

        <ImageView
            android:id="@+id/back_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="16dip"
            android:src="@drawable/ktv_switch_icon" />

        <TextView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/back_sex"
            android:text="男"
            android:textColor="#9F9F9F"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:text="性别"
            android:textColor="#666666"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/user_birth_date_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dip"
        android:background="#FFFFFF"
        android:gravity="center" >

        <ImageView
            android:id="@+id/back_borth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="16dip"
            android:src="@drawable/ktv_switch_icon" />

        <TextView
            android:id="@+id/user_borth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/back_borth"
            android:text="1993-06-15"
            android:textColor="#9F9F9F"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:text="生日"
            android:textColor="#666666"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

</LinearLayout>