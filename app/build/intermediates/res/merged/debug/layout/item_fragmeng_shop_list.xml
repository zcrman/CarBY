<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_fragment_shop_list_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.BeeFramework.view.WebImageView
                android:id="@+id/item_fragment_shop_list_imageview1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_image" />

            <ImageView
                android:id="@+id/haitaopin_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/haitao" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/item_fragment_shop_list_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="商品1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_imageview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_fragment_shop_list_textview1"
                android:layout_marginLeft="10dp"
                android:text="￥"
                android:textColor="#FB7133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_fragment_shop_list_textview1"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/item_fragment_shop_list_imageview2"
                android:text="26.8"
                android:textColor="#FB7133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_fragment_shop_list_textview1"
                android:layout_toLeftOf="@+id/item_fragment_shop_list_textview5"
                android:text="已售:"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_fragment_shop_list_textview1"
                android:layout_marginRight="16dp"
                android:text="00"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_fragment_shop_list_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/item_fragment_shop_list_imageview3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/purchase_in_the_music_exchange_icon_time" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="4月30日"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="周四"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="至"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="5月20日"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fragment_shop_list_textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="周三"
                android:textColor="#C7C7C7"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>